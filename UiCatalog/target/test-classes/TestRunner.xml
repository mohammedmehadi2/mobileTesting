<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS test suite on iPhone Simulator">

    <parameter name="OS" value="ios"/>
    <parameter name="appType" value="iPhone"/>
    <parameter name="deviceType" value="Simulator"/>
    <parameter name="deviceName" value="iPhone 8 Plus"/>
    <parameter name="version" value="11.0"/>

    <test name="IOSTest" preserve-order="true">
        <classes>
            <class name="testclasses.TestHomePageItems"/>
            <class name="testclasses.TestSegments"/>
            <class name="testclasses.TextFieldsTest"/>
        </classes>
    </test>
</suite>
